<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/background" >

    <ImageView
        android:id="@+id/enterthefap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:background="@drawable/logo"
        android:gravity="center" />

    <Button
        android:id="@+id/trivia"
        android:layout_width="@dimen/Xlarge_button_width"
        android:layout_height="@dimen/Xlarge_button_height"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/triviabuttonround" />

    <Button
        android:id="@+id/mapbtn"
        android:layout_width="@dimen/Xlarge_button_width"
        android:layout_height="@dimen/Xlarge_button_height"
        android:layout_above="@+id/trivia"
        android:layout_alignLeft="@+id/trivia"
        android:layout_marginBottom="53dp"
        android:background="@drawable/hensonbutton" />

</RelativeLayout>