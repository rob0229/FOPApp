<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red" >

            <Button
                android:id="@+id/trivia"
                android:layout_width="@dimen/Xlarge_button_width"
                android:layout_height="@dimen/Xlarge_button_height"
                android:layout_below="@+id/mapbtn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="34dp"
                android:background="@drawable/triviabutton"
                 />

            <Button
                android:id="@+id/mapbtn"
                android:layout_width="@dimen/Xlarge_button_width"
                android:layout_height="@dimen/Xlarge_button_height"
                android:layout_alignLeft="@+id/trivia"
                android:layout_below="@+id/enterthefap"
                android:layout_marginTop="14dp"
                android:background="#FFFFFF"
                android:typeface="monospace"
                android:textSize="60sp"
                android:textStyle="bold"
                android:text="@string/mapBtnTitle" 
                />

            <TextView
                android:id="@+id/enterthefap"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:gravity="center"
               	android:typeface="monospace"
                android:text="@string/EnterFapTitle"
                android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>